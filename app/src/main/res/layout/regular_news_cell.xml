<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/newsCellArticleImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/news_cell_image_background"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/newsCellSourceLogo"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:background="@drawable/news_cell_image_background"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newsCellArticleContent"

            android:text="sdjfsdijf"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newsCellPublishDate"
                android:gravity="start"
                android:text="sdfsdf"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newsCellOptions"
                android:gravity="right"
                />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>